#
## Default system properties included when running spark-submit.
## This is useful for setting default environmental settings.
#
## Example:
spark.master                     <%= @sparkmasters %>
spark.eventLog.enabled           true
spark.eventLog.dir               file://<%= @sparkeventlogs %> 
spark.serializer                 org.apache.spark.serializer.KryoSerializer
spark.driver.memory              2g
#spark.executor.extraJavaOptions  -XX:+PrintGCDetails -Dkey=value -Dnumbers="one two three"
spark.history.fs.logDirectory    file://<%= @sparkeventlogs %>
spark.history.provider           org.apache.spark.deploy.history.FsHistoryProvider
spark.history.ui.port            18080
spark.executor.memory            2g
spark.executor.cores             1
spark.local.dir                  <%= @sparklocaldir %>
spark.scheduler.mode             FAIR
spark.task.maxFailures           4
#Master HA
spark.deploy.recoveryMode        ZOOKEEPER
spark.deploy.zookeeper.url       <%= @sparkzookeeper %>
spark.deploy.zookeeper.dir       /spark/recovery
